<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0px"
    android:paddingTop="@dimen/main_top_padding"
    android:paddingLeft="@dimen/main_horizontal_padding"
    android:paddingRight="@dimen/main_horizontal_padding"
    android:background="@color/percolator_red_seven">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_input_spacing_margin"
        android:hint="@string/title_hint"
        android:textColor="@color/white"
        android:textColorHint="@color/percolator_red_grey"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_input_spacing_margin"
        android:hint="@string/description_hint"
        android:textColor="@color/white"
        android:textColorHint="@color/percolator_red_grey"
        android:textSize="50sp"
        android:textStyle="bold" />

</LinearLayout>